generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trade {
  id           String   @id @default(cuid())
  tradeDate    DateTime
  counterparty String
  type         String
  itemSku      String?
  itemName     String
  quantity     Int
  price        Int
  amount       Int
  status       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}